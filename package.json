{
  "name": "digitalocean-tools-vsts",
  "version": "0.2.0",
  "description": "DigitalOcean task for the Azure DevOps system",
  "author": "Marcelo Forment√£o <marceloavf3@hotmail.com>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/marceloavf/digitalocean-tools-vsts.git",
    "type": "git"
  },
  "scripts": {
    "lint": "yarn run tslint -t codeFrame -p tsconfig.json -c tslint.json && yarn run prettier \"{Tasks,Tests}/**/*.ts\" --write",
    "clean": "vsts-build-tools-clean",
    "postinstall": "vsts-build-tools-install",
    "prebuild": "vsts-build-tools-prebuild",
    "build": "yarn run lint && yarn run tsc",
    "package": "yarn run clean && yarn run build && yarn run vsts-build-tools-package",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "dependencies": {
    "aws-sdk": "^2.767.0",
    "azure-pipelines-task-lib": "^2.11.2"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.5",
    "@types/q": "^1.5.4",
    "cross-env": "^7.0.2",
    "gl-vsts-tasks-build-scripts": "0.7.0-alpha.7",
    "husky": "^0.14.3",
    "jest": "^26.5.2",
    "lint-staged": "^7.2.0",
    "prettier": "^2.1.2",
    "semantic-release": "^17.1.2",
    "tfx-cli": "^0.8.3",
    "ts-jest": "^26.4.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3"
  },
  "lint-staged": {
    "{Tasks,Tests}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": "^12.0.0",
    "yarn": ">=1.0.0"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      },
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci] ***NO_CI***\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/github"
    ]
  }
}
